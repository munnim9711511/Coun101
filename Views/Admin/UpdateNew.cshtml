                <input type="file" name=""  value="">
            </div>
        </div> -->
        <div class="row">
            <div class="col m8 input-field">
          <textarea id="textarea1" class="materialize-textarea dh " name="Text" style="direction: rtl;text-align: justify;">@item.Text</textarea>
                <label for="">News</label>
            </div>
        </div>  


    }
      <input type="submit" value="update" class="btn">
    </form>
</div>